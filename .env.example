# ==============================
# Core tokens
# ==============================
DISCORD_TOKEN=your_discord_token
GITHUB_TOKEN=your_github_models_token

# ==============================
# AI Models (configurable, no hardcode)
# ==============================
# Chat trực tiếp (!chat)
CHAT_MODEL_PRIMARY=openai/gpt-5
CHAT_MODEL_FALLBACKS=openai/gpt-5-mini,openai/gpt-5-nano,openai/gpt-4.1,openai/gpt-4o

# Vision/OCR cho ảnh trong chat (!chat, /chat) - xử lý từng ảnh một
VISION_MODEL_PRIMARY=meta/Llama-4-Maverick-17B-128E-Instruct-FP8
VISION_MODEL_FALLBACKS=openai/gpt-4.1-nano,openai/gpt-4o-mini

# Tóm tắt + câu hỏi ôn tập (!summary)
SUMMARY_MODEL_PRIMARY=openai/gpt-5-chat
SUMMARY_MODEL_FALLBACKS=openai/gpt-5-mini,openai/gpt-5-nano,openai/gpt-4.1,openai/gpt-4o

# Chấm câu trả lời ôn tập (!answer)
ANSWER_MODEL_PRIMARY=openai/gpt-5-chat
ANSWER_MODEL_FALLBACKS=openai/gpt-5-mini,openai/gpt-5-nano,openai/gpt-4.1,openai/gpt-4o

# Reasoning mode (!reason, /reason)
REASONING_MODEL_PRIMARY=deepseek/DeepSeek-R1-0528
REASONING_MODEL_FALLBACKS=microsoft/Phi-4-reasoning,microsoft/Phi-4-mini-reasoning

# Gmail digest analysis model
#
# Mail digest AI (Google AI Studio Gemini, gọi luân phiên)
GOOGLE_AI_STUDIO_API_KEY=your_google_ai_studio_api_key
THECATAPI_KEY=your_thecatapi_key
MAIL_LLM_MODELS=gemini-3.0-flash,gemini-2.5-pro
GMAIL_MODEL_PRIMARY=xai/grok-3
GMAIL_MODEL_FALLBACKS=openai/gpt-5-mini,openai/gpt-5-nano,openai/gpt-4o

# Legacy (optional)
GITHUB_MODEL=gpt-4o-mini

# 0 = không giới hạn max_tokens (ưu tiên câu trả lời dài)
MAX_OUTPUT_TOKENS=0

# Timeout request AI (giây)
AI_REQUEST_TIMEOUT_SECONDS=45
REASONING_REQUEST_TIMEOUT_SECONDS=90

# ==============================
# Other integrations
# ==============================
WEATHER_API_KEY=your_weatherapi_key
WEATHER_PROVIDER=weatherapi
# Map search dùng OpenStreetMap Nominatim (không cần API key)

# Weather alert tự động
# Mỗi bao nhiêu giờ kiểm tra forecast xấu
WEATHER_ALERT_INTERVAL_HOURS=3
# Cửa sổ dự báo để check rủi ro (giờ tới)
WEATHER_ALERT_LOOKAHEAD_HOURS=3
# Ngưỡng cảnh báo mưa theo %
WEATHER_ALERT_RAIN_CHANCE_THRESHOLD=60
# Ngưỡng cảnh báo gió (km/h)
WEATHER_ALERT_WIND_KPH_THRESHOLD=25

# Gmail digest config (unread + sent summary)
# Không cần Gmail API key riêng: dùng OAuth qua credentials.json + token.json
# Số tiêu đề mail unread tối đa trong mỗi digest
GMAIL_UNREAD_LIMIT=20
# Số mail đã đọc gần nhất lấy vào để phân loại/đánh giá độ quan trọng
GMAIL_READ_LIMIT=20
# Không xử lý mail cũ hơn số ngày này
GMAIL_LOOKBACK_DAYS=30
# Số sent mail tối đa lấy trong 1 ngày để tổng hợp
GMAIL_SENT_TODAY_LIMIT=200

# Discord IDs
YOUR_USER_ID=123456789012345678
CHANNEL_MAIN=123456789012345678
CHANNELS_TO_MONITOR=111111111111111111,222222222222222222

# Optional: để slash command sync ngay lập tức cho 1 server test
APP_GUILD_ID=123456789012345678